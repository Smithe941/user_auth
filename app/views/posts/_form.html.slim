h2.h2.text-center = title_type(resource)
= simple_form_for resource, remote: true do |f|

  .form-group
    = f.label :title, class: 'label label-info'
    = f.error :title, class: 'text-danger'
    = f.input :title, class: 'form-control', error: false, label: false, autofocus: true
  .form-group
    = f.label :body, class: 'label label-info'
    = f.error :body, class: 'text-danger'
    = f.input :body, class: 'form-control', error: false, label: false

  .actions = f.button :submit, remote: true
